<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mt-3 text-center">Daftar Contact</h2>

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Nama</th>
            <th scope="col">No Handphone</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length < 1) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">
                Data contact masih kosong !
              </div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact,no) => { %>
          <tr>
            <td><%= no + 1 %></td>
            <td><%= contact.nama %></td>
            <td><%= contact.noHp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %>"
                class="btn btn-success badge rounded-pill"
                ><i class="bi bi-info-circle"></i> Detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
